function _init()
  xpos = 64
  ypos = 64
end

function _draw()
  cls(3)
  print("@", xpos, ypos)
end

function _update()
  if (btnp(0) and xpos > 0) xpos -= 4
  if (btnp(1) and xpos < 127-5) xpos += 4
  if (btnp(2) and ypos > 0+4) ypos -= 6
  if (btnp(3) and ypos < 127-9) ypos += 6
end

